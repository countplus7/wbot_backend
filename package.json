{
  "name": "whatsapp-ai-bot-api",
  "version": "1.0.0",
  "description": "High-performance multi-tenant WhatsApp AI Bot API with business management",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node --max-old-space-size=4096 --optimize-for-size server.js",
    "start:dev": "NODE_ENV=development node --inspect --max-old-space-size=2048 server.js",
    "dev": "NODE_ENV=development nodemon --inspect --max-old-space-size=2048 server.js",
    "dev:fast": "NODE_ENV=development nodemon --max-old-space-size=2048 server.js",
    "init-db": "node scripts/init-database.js",
    "reset-db": "node scripts/reset-database.js",
    "migrate-db": "node scripts/migrate-database.js",
    "seed-intents": "node scripts/seed-intents.js",
    "cleanup": "node scripts/cleanup-media.js",
    "cleanup:force": "node scripts/cleanup-media.js --force",
    "health": "curl -s http://localhost:5000/health",
    "health:detailed": "curl -s http://localhost:5000/health/detailed",
    "test:health": "curl -f http://localhost:5000/health > /dev/null",
    "benchmark": "node --expose-gc scripts/benchmark.js",
    "memory:check": "node --expose-gc -e \"setInterval(() => { console.log(process.memoryUsage()); global.gc && global.gc(); }, 5000);\"",
    "setup:full": "npm run migrate-db && npm run init-db && npm run seed-intents",
    "setup:dev": "npm run migrate-db && npm run seed-intents"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "fs-extra": "^11.1.1",
    "crypto": "^1.0.1",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "ignore": ["uploads/*", "*.log"],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "keywords": [
    "whatsapp",
    "ai",
    "bot",
    "openai",
    "postgresql",
    "multi-tenant",
    "business",
    "automation"
  ],
  "author": "WhatsApp AI Bot Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/whatsapp-ai-bot"
  },
  "bugs": {
    "url": "https://github.com/your-org/whatsapp-ai-bot/issues"
  },
  "homepage": "https://github.com/your-org/whatsapp-ai-bot#readme",
  "os": ["linux", "darwin", "win32"],
  "cpu": ["x64", "arm64"],
  "preferGlobal": false,
  "private": true
}
