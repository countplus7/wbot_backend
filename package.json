{
  "name": "whatsapp-ai-bot-api",
  "version": "1.0.0",
  "description": "High-performance multi-tenant WhatsApp AI Bot API with business management",
  "main": "server.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 --optimize-for-size server.js",
    "start:dev": "node --inspect --max-old-space-size=2048 server.js",
    "dev": "nodemon --inspect --max-old-space-size=2048 server.js",
    "dev:fast": "nodemon --max-old-space-size=2048 server.js",
    "db-setup": "node scripts/db-setup.js",
    "db-seed": "node scripts/db-seed.js",
    "cleanup": "node scripts/cleanup-media.js",
    "cleanup:force": "node scripts/cleanup-media.js --force",
    "health": "curl -s http://localhost:5000/health",
    "health:detailed": "curl -s http://localhost:5000/health/detailed",
    "test:health": "curl -f http://localhost:5000/health > /dev/null"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.1.1",
    "googleapis": "^160.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "ignore": [
      "uploads/*",
      "*.log"
    ],
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "keywords": [
    "whatsapp",
    "ai",
    "bot",
    "openai",
    "postgresql",
    "multi-tenant",
    "business",
    "automation"
  ],
  "author": "WhatsApp AI Bot Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/whatsapp-ai-bot"
  },
  "bugs": {
    "url": "https://github.com/your-org/whatsapp-ai-bot/issues"
  },
  "homepage": "https://github.com/your-org/whatsapp-ai-bot#readme",
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "preferGlobal": false,
  "private": true
}
