# ==============================================
# OPTIMIZED WHATSAPP AI BOT CONFIGURATION
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0
BASE_URL=http://localhost:5000

# ==============================================
# DATABASE CONFIGURATION (OPTIMIZED)
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_bot
DB_USER=your_db_user
DB_PASSWORD=your_db_password
# Performance optimizations
DB_POOL_MAX=50
DB_POOL_MIN=5
DB_CONNECTION_TIMEOUT=3000
DB_IDLE_TIMEOUT=30000

# ==============================================
# WHATSAPP BUSINESS API
# ==============================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_verify_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# ==============================================
# OPENAI CONFIGURATION
# ==============================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_VISION_MODEL=gpt-4-vision-preview

# ==============================================
# GOOGLE WORKSPACE INTEGRATION
# ==============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/google/callback

# ==============================================
# HUBSPOT INTEGRATION
# ==============================================
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_REDIRECT_URI=http://localhost:5000/api/hubspot/callback
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token

# ==============================================
# ODOO INTEGRATION
# ==============================================
ODOO_BASE_URL=your_odoo_url
ODOO_DATABASE=your_odoo_database
ODOO_USERNAME=your_odoo_username
ODOO_PASSWORD=your_odoo_password

# ==============================================
# AIRTABLE INTEGRATION
# ==============================================
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
# Memory settings (in MB)
MAX_HEAP_SIZE=4096
GC_THRESHOLD=500

# Request timeouts (in milliseconds)
REQUEST_TIMEOUT=30000
DB_TIMEOUT=30000
EXTERNAL_API_TIMEOUT=15000

# Compression settings
COMPRESSION_THRESHOLD=512
COMPRESSION_LEVEL=6

# ==============================================
# RATE LIMITING (OPTIMIZED)
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_GENERAL=2000
RATE_LIMIT_AUTH=100
RATE_LIMIT_WEBHOOK=2000

# ==============================================
# CACHING CONFIGURATION
# ==============================================
HEALTH_CACHE_TTL=5000
STATIC_CACHE_MAX_AGE=604800
INTENT_CACHE_TTL=300000

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# ==============================================
# MEDIA PROCESSING
# ==============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav
UPLOADS_PATH=./uploads
TEMP_PATH=./uploads/temp

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true
SLOW_REQUEST_THRESHOLD=1000

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_METRICS=true
ENABLE_PROFILING=false
ENABLE_INTENT_DETECTION=true
ENABLE_EMBEDDINGS=true
ENABLE_HEALTH_CHECK=true

# ==============================================
# PRODUCTION OPTIMIZATIONS
# ==============================================
# Set these for production deployments
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_REQUEST_LOGGING=false
# ENABLE_PROFILING=false
# ENABLE_METRICS=true
# COMPRESSION_LEVEL=6
# DB_POOL_MAX=100
# RATE_LIMIT_GENERAL=5000